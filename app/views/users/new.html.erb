<!-- app/views/users/new.html.erb -->

<header class="page-header">
  <h1>Signup</h1>
</header>

<div>
    <%= form_for :user, url: '/users' do |f| %>
    <div class="form-group">
      <label for="name">Name</label>
      <div class="col-md-3 mb-3"><%= f.text_field :name, class: 'form-control' %></div>
      <label for="email">Email:</label>
      <div class="col-md-3 mb-3"><%= f.text_field :email, class: 'form-control' %></div>
      <label for="password">Password:</label>
      <div class="col-md-3 mb-3"><%= f.password_field :password, class: 'form-control' %></div>
      <label for="password_confirmation">Confirm Password</label>
      <div class="col-md-3 mb-3"><%= f.password_field :password_confirmation, class: 'form-control' %></div>
      <p></p>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>  
</div>
    

