<header class="page-header">
  <h1>Login</h1>
</header>

<div>
  <form>
    <%= form_tag '/login' do %>
    <div class="form-group">
      <label for="email">Email</label>
      <div class="col-md-3 mb-3"><%= text_field_tag :email %></div>
      <label for="password">Password</label>
      <div class="col-md-3 mb-3"><%= password_field_tag :password %></div>
      <p></p>
      <%= submit_tag "Submit" %>
      <% end %>
    </div>
  </form>
</div>